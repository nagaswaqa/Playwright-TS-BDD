{
  "manifest_version": 3,
  "name": "Playwright AutoLocator & CodeGen",
  "version": "1.0.0",
  "description": "DevTools panel to generate robust Playwright & XPath locators uniquely identified within the DOM.",
  "devtools_page": "src/devtools.html",
  "action": {
    "default_title": "Playwright Inspector",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}