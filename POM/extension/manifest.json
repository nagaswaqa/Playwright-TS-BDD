{
    "manifest_version": 3,
    "name": "Playwright POM Generator",
    "version": "1.0",
    "description": "Generates Playwright Page Object Model code for the current page.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}